<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="8dp"
    android:paddingEnd="8dp">

    <com.yarolegovich.mp.MaterialPreferenceCategory
        android:id="@+id/aria2lib_confScreen_general"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        app:mpc_title_color="@color/colorPrimary" />

    <com.yarolegovich.mp.MaterialPreferenceCategory
        android:id="@+id/aria2lib_confScreen_rpc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        app:mpc_title_color="@color/colorPrimary" />

    <com.yarolegovich.mp.MaterialPreferenceCategory
        android:id="@+id/aria2lib_confScreen_notifications"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        app:mpc_title_color="@color/colorPrimary" />

    <com.yarolegovich.mp.MaterialPreferenceCategory
        android:id="@+id/aria2lib_confScreen_logs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        app:mpc_title_color="@color/colorPrimary" />

    <com.yarolegovich.mp.MaterialPreferenceCategory
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mpc_title="@string/networkInterfaces"
        android:layout_marginBottom="8dp"
        app:mpc_title_color="@color/colorPrimary">

        <com.gianlu.commonutils.misc.SuperTextView
            android:layout_width="match_parent"
            android:id="@+id/aria2lib_confScreen_nics"
            android:layout_height="wrap_content"
            android:padding="16dp" />
    </com.yarolegovich.mp.MaterialPreferenceCategory>
</LinearLayout>